<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_splash_fragment">


    <fragment
        android:id="@+id/nav_splash_fragment"
        android:name="me.rezapour.photoapp.ui.activites.fragments.SplashFragment"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splash_to_main"
            app:destination="@+id/nav_main_fragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_main_fragment"
        android:name="me.rezapour.photoapp.ui.activites.fragments.MainFragment"
        tools:layout="@layout/fragment_main" />

</navigation>